<div id="home">
  <div class="container">


    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>

        <h2>Bitcoin conversion calculator</h2>

<div class="row">
  <div class="col-sm-1"></div>
        <div class="card col-sm-4 text-center">

        <form class="clearfix mb-4" action="POST">
<br>
          <div class="form-group">
            <label for="value">Canadian Dollar Value</label>
            <input type="number" step="any" min="0" id="numberValue" class="form-control" aria-describedby="example-text" placeholder="$$$">
      </div>
          <div class="form-group">
            <label for="value">investment start date</label>
            <input type="date" id="startDate" class="form-control" aria-describedby="example-text" placeholder="YYYYMMDD">
          </div> 
          <div class="form-group">
            <label for="value">investiment end date</label>
            <input type="date" id="endDate" class="form-control" aria-describedby="example-text" placeholder="YYYYMMDD">
          </div>
      <button id="submit" class="btn btn-primary d-flex justify-content-center">Submit</button>
        </form>

    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
      <div class="card border-primary mb-3" style="max-width: 18rem;">
  <div class="card-body text-primary">
    <h5 class="card-title">Book Value</h5>
    <p class="card-text">999</p>
  </div>
</div>
<div class="card border-warning mb-3" style="max-width: 18rem;">
  <div class="card-body text-warning">
    <h5 class="card-title">Net Amount</h5>
    <p class="card-text">999</p>
  </div>
</div>
<div class="card border-success mb-3" style="max-width: 18rem;">
  <div class="card-body text-success">
    <h5 class="card-title">Net Gain/Loss</h5>
    <p class="card-text">999</p>
  </div>
</div>

    </div>
    <div class="col-sm-1"></div>


    </div>   
 <div class="row">

</div>

        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
