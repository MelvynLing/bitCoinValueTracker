<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <br>
        <h2>Bitcoin Value Charter</h2>
        <br>


<form class="clearfix mb-4" action="POST" >
          <div class="form-group">
            <label for="initialAmount">Initial Investment Amount in Canadian Dollars:</label>
            <input  
            id="initialAmount" 
            class="form-control" 
            aria-describedby="initial-Amount" 
            placeholder="Ex. $1000" 
            
            />
          </div>
          <div class="form-group">
            <label for="entryDate"> Investment Entry Date: (YYYY-MM-DD)</label>
            <input 
            type="date" 
            id="entryDate" 
            class="form-control" 
            aria-describedby="entry-Date" 
            placeholder="No earlier than 2010-07-17 please!" 
          
            />
          </div>     
          <div class="form-group">
            <label for="exitDate">Investment Exit Date: (YYYY-MM-DD)</label>
            <input 
            type="date" 
            id="exitDate" 
            class="form-control" 
            aria-describedby="exit-Date" 
            placeholder="No Future dates!" 

            />
          </div>
          
          <button id="submit" class="btn btn-primary float-right" >Submit</button>
        </form>
        <h3>Recent Investments:</h3>
        <table  class="table table-hover table-sm text-center">
      <thead>
        <tr>
          <th scope="col">Initial Investment in CAD</th>
          <th scope="col">Investment Entry Date</th>
          <th scope="col">Investment Exit Date</th>
          <th scope="col">Final BitCoin Amount</th>
          <th scope="col">Gain or Loss in CAD</th>
        </tr>
      </thead>
<tbody id="investor-table-body">
          {{#each investors}}
                             <tr data-id="{{this.id}}">

            <td>{{this.initialAmount}}</td>
            <td>{{this.entryDate}}</td>
            <td>{{this.exitDate}}</td>
            <td>{{this.netAmount}}</td>
            <td>{{this.gainLoss}}</td>
            <td><button class="btn btn-danger float-right delete deleteButton"  data-id="{{this.id}}">ï½˜</button></td>
                                </tr>

          {{/each}}
       </tbody>   
</table>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>


