<script>
  function validate(){
    if(document.btcForm.initialAmount.value == "")
    {
      alert("Please enter a Canadian Dollar Amount!");
      document.btcForm.initialAmount.focus();
      return false;
    }
    if(document.btcForm.entryDate.value == "")
    {
      alert("Please enter a date after 2010-07-17!");
      document.btcForm.entryDate.focus();
      return false;
    } 
    if(document.btcForm.exitDate.value == "")
    {
      alert("Please enter a date before today!");
      document.btcForm.exitDate.focus();
      return false;
    }
    return(true);
  }
